{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "type": {
      "enum": ["lab", "challenge"]
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "difficulty": {
      "enum": ["Beginner", "Intermediate", "Advanced"]
    },
    "time": {
      "type": "integer"
    },
    "details": {
      "type": "object",
      "properties": {
        "steps": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "text": {
                  "type": "string",
                  "pattern": "^step\\d+\\.md$"
                },
                "verify": {
                  "type": "array",
                  "items": [
                    {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "file": {
                          "type": "string",
                          "pattern": "^verify.*sh$"
                        },
                        "hint": {
                          "type": "string"
                        },
                        "timeout": {
                          "type": "integer"
                        },
                        "showstderr": {
                          "type": "boolean"
                        }
                      },
                      "required": [
                        "name",
                        "file",
                        "hint",
                        "timeout",
                        "showstderr"
                      ]
                    }
                  ]
                },
                "skills": {
                  "type": "array",
                  "items": [
                    {
                      "type": "string",
                      "pattern": "/"
                    }
                  ]
                }
              },
              "required": ["title", "text", "verify", "skills"]
            }
          ]
        },
        "intro": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "pattern": "intro.md"
            },
            "background": {
              "type": "string",
              "pattern": "setup.sh"
            }
          },
          "required": ["text"]
        },
        "finish": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "pattern": "finish.md"
            }
          },
          "required": ["text"]
        },
        "assets": {
          "type": "object",
          "properties": {
            "host01": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "file": {
                      "type": "string"
                    },
                    "target": {
                      "type": "string"
                    }
                  },
                  "required": ["file", "target"]
                }
              ]
            }
          },
          "required": ["host01"]
        }
      },
      "required": ["steps", "intro", "finish"]
    },
    "backend": {
      "type": "object",
      "properties": {
        "imageid": {
          "type": "string"
        }
      },
      "required": ["imageid"]
    }
  },
  "required": [
    "type",
    "title",
    "description",
    "difficulty",
    "time",
    "details",
    "backend"
  ]
}
